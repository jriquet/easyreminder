<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.free.riquet.jeancharles.easyreminder" >
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="18" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="fr.free.riquet.jeancharles.easyreminder.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="fr.free.riquet.jeancharles.easyreminder.NewUser"
            android:label="@string/title_activity_new_user"
            android:parentActivityName="fr.free.riquet.jeancharles.easyreminder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.free.riquet.jeancharles.easyreminder.MainActivity" />
        </activity>
        <activity
            android:name="fr.free.riquet.jeancharles.easyreminder.Login"
            android:label="@string/title_activity_login"
            android:parentActivityName="fr.free.riquet.jeancharles.easyreminder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.free.riquet.jeancharles.easyreminder.MainActivity" />
        </activity>
        <activity
            android:name="fr.free.riquet.jeancharles.easyreminder.LoginResult"
            android:label="@string/title_activity_login"
            android:parentActivityName="fr.free.riquet.jeancharles.easyreminder.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.free.riquet.jeancharles.easyreminder.Login" />
        </activity>
        <activity
            android:name="fr.free.riquet.jeancharles.easyreminder.Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName="fr.free.riquet.jeancharles.easyreminder.LoginResult" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.free.riquet.jeancharles.easyreminder.LoginResult" />
        </activity>
    </application>

</manifest>
